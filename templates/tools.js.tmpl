// Anthropic tools template
// Generated from: {{templateName}}

{{#if description}}
/**
 * {{description}}
 */
{{/if}}
export const tools = [
{{#each tools}}
  {
    name: '{{name}}',
    description: '{{description}}',
    input_schema: JSON.stringify({{input_schema}})
  },
{{/each}}
];

{{#if hasHandlers}}
export const createHandlers = (client) => ({
{{#each tools}}
  {{name}}: async (params) => {
    return client.{{name}}(params);
  },
{{/each}}
});
{{/if}}
